<!--
  get the record where followed_id is the user currently being viewed and add option to delete the relationship
  there will be an existing relationship because of the condition in the follow form
-->
<%= form_for(current_user.active_relationships.find_by(followed_id: @user.id), html: { method: delete }) do |f| %>
  <%= f.submit "Unfollow", class: "btn" %>
<% end %>